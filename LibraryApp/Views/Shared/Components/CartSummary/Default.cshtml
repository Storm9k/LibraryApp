@model Cart

<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Ваша корзина:</b>
            <i>@Model.Lines.Sum(x => x.Quantity) шт., @Model.ComputeTotalValue().ToString("c")</i>
        </small>
    }
    <a class="btn btn-sm navbar-btn" asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>