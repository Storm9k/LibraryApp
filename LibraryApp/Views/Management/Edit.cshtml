@model Book
@{
    ViewBag.Title = "Редактирование книги";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Genre">Жанр</label>
        <div><span asp-validation-for="GenreID" class="text-danger"></span></div>
        <select asp-for="GenreID">
            <option disabled>Выберите жанр</option>
            @{
                foreach (Genre genre in ViewBag.Genres)
                {
                    <option value="@genre.ID">@genre.Name</option>
                }
            }
        </select>
        
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-actioп="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>