@model IEnumerable<Book>
@{
    ViewBag.Title = "Библиотека";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Цена</th>
        <th class="text-center">Действие</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td class="text-right">@book.ID</td>
            <td>@book.Name</td>
            <td class="text-right">@book.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-BookID="@book.ID">Изменить</a>
                    <input type="hidden" name="BookID" value="@book.ID" />
                    <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Добавить книгу</a>
</div>
